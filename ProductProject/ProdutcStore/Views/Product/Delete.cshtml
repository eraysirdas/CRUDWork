@model ProductStore.Core.Product

@{
	ViewData["Title"] = "Delete Product";
}

<form method="post" action="Delete">
	<div class="card">
		<div class="card-header bg-info">
			<h2 class="text-center">@ViewData["Title"]</h2>
		</div>
		<div class="card-body">
			<input type="hidden" asp-for="Id" />
			<div class="form-floating mb-2">
				<input asp-for="ProductName" class="form-control" readonly />
				<label asp-for="ProductName"></label>
			</div>
			<div class="form-floating mb-2">
				<input asp-for="Description" class="form-control" readonly />
				<label asp-for="Description"></label>
			</div>
			<div class="form-floating mb-2">
				<input asp-for="Color" class="form-control" readonly />
				<label asp-for="Color"></label>
			</div>
			<div class="form-floating mb-2">
				<input asp-for="Category" class="form-control" readonly />
				<label asp-for="Category"></label>
			</div>
			<div class="form-floating mb-2">
				<input asp-for="Price" class="form-control" readonly />
				<label asp-for="Price"></label>
			</div>
			<div>
				<div class="col-lg-12 d-grid">
					<button type="submit" class="btn btn-danger">Delete</button>
				</div>
			</div>
		</div>
	</div>
</form>